<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingBottom="20px">


    <TextView
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text=""
        android:textColor="@color/project_item_title_color"
        android:textSize="32px" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/project_title"
        android:layout_marginRight="15px"
        android:layout_toLeftOf="@+id/work_record_count"
        android:text="@string/work_record"
        android:textColor="@color/project_item_text_color" />

    <TextView
        android:id="@+id/work_record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/project_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:text=""
        android:textColor="@color/project_item_text_color" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/project_title"
        android:layout_below="@id/project_title"
        android:layout_marginTop="18px"
        android:text="@string/type"
        android:textColor="@color/project_item_text_color" />


    <TextView
        android:id="@+id/project_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv2"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@+id/tv2"
        android:text=""
        android:textColor="@color/project_item_text_color" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv2"
        android:layout_marginLeft="250px"
        android:text="@string/project_manager"
        android:textColor="@color/project_item_text_color" />

    <TextView
        android:id="@+id/project_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv2"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@+id/tv3"
        android:text="@string/name_simple"
        android:textColor="@color/project_item_text_color" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="28px"
        android:layout_height="37px"
        android:layout_below="@id/tv2"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:src="@mipmap/map" />

    <TextView
        android:id="@+id/project_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/img"
        android:layout_alignBottom="@id/img"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/img"
        android:text="@string/address_simple"
        android:textColor="@color/project_item_text_color" />


</RelativeLayout>